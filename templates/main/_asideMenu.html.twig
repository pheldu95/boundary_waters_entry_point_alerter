<div data-controller="closeable">
    <!-- Burger button -->
    <button 
        data-closeable-target="toggleButton"
        data-action="click->closeable#open"
        class="hidden fixed z-50 p-3 text-white hover:bg-white/10 rounded-lg transition-colors group"
        aria-label="Open menu"
    >
        <div class="w-6 h-5 relative flex flex-col justify-between">
            <span class="w-full h-0.5 bg-white transition-all duration-300 ease-in-out"></span>
            <span class="w-full h-0.5 bg-white transition-all duration-300 ease-in-out"></span>
            <span class="w-full h-0.5 bg-white transition-all duration-300 ease-in-out"></span>
        </div>
    </button>

    <!-- Sidebar -->
    <aside 
        data-closeable-target="sidebar"
        class="pb-8 lg:pb-0 lg:w-[411px] shrink-0 lg:block lg:min-h-screen text-white px-8 border-b lg:border-b-0 lg:border-l border-white/20 transition-all overflow-hidden"
    >
        <div class="flex justify-between mt-11 mb-7">
            <h2 class="text-[32px] font-semibold">Menu</h2>
            <button data-action="click->closeable#close" class="group">
                <!-- Animated X button that turns into burger -->
                <div class="w-6 h-5 relative flex flex-col justify-center items-center">
                    <span class="absolute w-full h-0.5 bg-white transition-all duration-300 ease-in-out rotate-45"></span>
                    <span class="absolute w-full h-0.5 bg-white transition-all duration-300 ease-in-out -rotate-45"></span>
                </div>
            </button>
        </div>
        <div>
            <div class="flex flex-col space-y-1.5">
                <div class="rounded-2xl py-1 px-3 flex justify-center w-32 items-center" style="background: rgba(255, 184, 0, .1);">
                    <div class="rounded-full h-2 w-2 bg-amber-400 blur-[1px] mr-2"></div>
                    <p class="uppercase text-xs">Tracking x Entry Point(s)</p>
                </div>
                <h3 class="tracking-tight text-[22px] font-semibold">
                    <a class="hover:text-amber-400 transition-colors duration-200" href="">My Tracked Entry Points</a>
                </h3>
            </div>
        </div>
    </aside>
</div>